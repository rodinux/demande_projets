<%= form_for (@projet) do |f| %>
  <% if @projet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@projet.errors.count, "error") %> Votre demande a bien été prise en compte.</h2>

      <ul>
      <% @projet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
  <div class="intro_form">
    <p> Vous avez un projet web, n'hésitez pas à compléter ce formulaire ci-dessous, une équipe de Simplonve vous répondra dans les meilleurs délais </p>
  </div>
    <%= image_tag("logosimplon.svg", :alt => "logosimplon", :class => "logo_simplonve") %>
    <div class="champ_form">
    <label>Type d'organisme</label>
    <%= f.select :personne , ["Association", "Collectivité", "Entreprise", "Particulier", "Artisan"] , { include_blank: false } %>
  </div>
  <div class="champ_form">
    <%= f.label :organisme, :class => 'titre_champ' %><br>
    <%= f.text_field :organisme, :maxlength =>40, :class => 'input_champ' %>
  </div>
  <div class="champ_form">
    <%= f.label :nom, :class => 'titre_champ' %><br>
    <%= f.text_field :nom, :maxlength =>40, :class => 'input_champ' %>
  </div>
  <div class="champ_form">
    <%= f.label :telephone, :class => 'titre_champ' %><br>
    <%= f.text_field :telephone, :maxlength =>40, :class => 'input_champ' %>
  </div>
  <div class="champ_form">
    <%= f.label :email, :class => 'titre_champ' %><br>
    <%= f.email_field :email, :maxlength =>40, :class => 'input_champ' %>
  </div>
  <div class="description">
    <%= f.label :description, :class => 'titre_champ' %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <input type="submit" class="bouton" value="Valider" />
  </div>

<% end %>
</div>
