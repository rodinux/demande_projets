<%= form_for (@projet) do |f| %>
  <% if @projet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@projet.errors.count, "error") %> Votre demande a bien été prise en compte.</h2>

      <ul>
      <% @projet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
   
   <%= image_tag("logosimplon.svg", :alt => "prise contact", :class => "logo_simplonve") %>
  <div class="personne">
    <%= f.label :personne, :class => 'titre_champ', :value => 'Type de structure' %><br>
    <%= f.select :personne , ["Association", "Collectivité", "Entreprise", "Particulier", "Artisan"] , { include_blank: false } %>
  </div>
  <div class="champ_form">
    <%= f.label :organisme, :class => 'titre_champ' %><br>
    <%= f.text_field :organisme, :maxlength =>40, :class => 'champ_input' %>
  </div>
  <div class="champ_form">
    <%= f.label :nom, :class => 'titre_champ', :value => 'votre nom' %><br>
    <%= f.text_field :nom, :maxlength =>40, :class => 'champ_input' %>
  </div>
  <div class="champ_form">
    <%= f.label :telephone, :class => 'titre_champ' %><br>
    <%= f.text_field :telephone, :maxlength =>15, :class => 'champ_input' %>
  </div>
  <div class="champ_form">
    <%= f.label :email, :class => 'titre_champ' %><br>
    <%= f.email_field :email, :maxlength =>40, :class => 'champ_input' %>
  </div>
  <div class="description">
    <%= f.label :description, :class => 'titre_champ' %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <input type="submit" class="bouton" value="Valider" />
  </div>

<% end %>
</div>
